{
  "name": "release-pull-request",
  "version": "0.8.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "clean-dist": "rimraf dist",
    "generate-index": "node generate-index.js",
    "prebuild": "run-p clean-dist generate-index",
    "build": "tsc",
    "lint": "tslint -p .",
    "pretest": "rimraf .jest-cache",
    "zarro": "zarro",
    "prerelease": "run-s build lint test",
    "release": "cross-env VERSION_INCREMENT_STRATEGY=minor run-s \"zarro release-npm\"",
    "prerelease-beta": "run-s build lint test",
    "release-beta": "cross-env BETA=1 VERSION_INCREMENT_STRATEGY=patch run-s \"zarro release-npm\"",
    "start": "node --disable-warning=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm src/release-pull-request-cli.ts"
  },
  "keywords": [],
  "author": {
    "name": "Davyd McColl",
    "email": "davydm@gmail.com"
  },
  "license": "BSD-3-Clause",
  "description": "semi-automates creating a release from a pull request at GitHub",
  "files": [
    "dist/**/*",
    "index.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@faker-js/faker": "^10.0.0",
    "@types/jest": "^30.0.0",
    "@types/yargs": "^17.0.33",
    "babel-jest": "^30.1.2",
    "cross-env": "^10.0.0",
    "expect-even-more-jest": "^1.25.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "typescript": "^5.9.2",
    "zarro": "^1.205.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "exec-step": "^0.21.0",
    "inquirer-autocomplete-standalone": "^0.8.1",
    "system-wrapper": "^1.9.0",
    "yafs": "^1.48.0",
    "yargs": "^18.0.0"
  },
  "bin": {
    "release-pull-request": "./dist/release-pull-request-cli.js"
  },
  "homepage": "https://@github.com/fluffynuts/release-pull-request",
  "repository": {
    "type": "git",
    "url": "https://github.com/fluffynuts/release-pull-request"
  }
}